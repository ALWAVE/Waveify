{
  "name": "waveify",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dev:web": "next dev",
    "build:web": "next build",
    "start:web": "next start",
    "dev:desktop": "concurrently \"next dev\" \"npm:dev:electron\"",
    "dev:electron": "tsc -p tsconfig.electron.json && electron ./dist-electron/main.js",
    "build:electron": "tsc -p tsconfig.electron.json",
    "dist": "npm run build:web && npm run build:electron && electron-builder"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-slider": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "colorthief": "^2.6.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.6.3",
    "lucide-react": "^0.482.0",
    "music-metadata-browser": "^2.5.11",
    "next": "15.2.2",
    "next-pwa": "^5.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.55.0",
    "react-hot-toast": "^2.5.2",
    "react-howler": "^5.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.5.1",
    "react-wavify": "^1.11.1",
    "tailwind-merge": "^3.0.2",
    "uniqid": "^5.4.0",
    "use-sound": "^5.0.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/howler": "^2.2.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "electron": "^35.0.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.2.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.waveify.player",
    "productName": "Waveify",
    "executableName": "Waveify",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist-electron/**/*",
      "public/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/logo_new.ico"
    },
    "extraMetadata": {
      "name": "Waveify",
      "productName": "Waveify",
      "description": "Вейфи Музыка"
    }
  }
}
